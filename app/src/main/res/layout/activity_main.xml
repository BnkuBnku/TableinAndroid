<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:stretchColumns="1,2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow android:id="@+id/Row1">

                <EditText
                    android:id="@+id/EditText1"
                    android:layout_column="1"
                    android:layout_width="50dp" />

                <EditText
                    android:id="@+id/EditText2"
                    android:layout_column="1"
                    android:layout_width="50dp" />

                <Button
                    android:id="@+id/EnterButton"
                    android:layout_column="1"
                    android:layout_width="100dp"
                    android:text="Enter" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TextRow_Two"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="100dp"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TextRow_Three"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="100dp"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TextRow_Four"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="100dp"/>


            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TextRow_Five"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="100dp"/>


            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TextRow_Six"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="100dp"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TextRow_Seven"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="100dp"/>

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TextRow_Eight"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="100dp"/>


            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TextRow_Nine"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="100dp"/>


            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/TextRow_Ten"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_height="35dp"
                    android:layout_width="100dp"/>

            </TableRow>

        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>